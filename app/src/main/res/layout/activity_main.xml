<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Happy Birthday Text -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Happy Birthday!"
        android:textSize="30sp"
        android:textColor="#FFA500"
        android:gravity="center_horizontal" />

    <!-- CakeView -->
    <cs301.birthdaycake.CakeView
        android:id="@+id/cakeview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Columns Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Column 1: TextView and SeekBar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How many candles?"
                android:layout_marginBottom="8dp" />

            <SeekBar
                android:id="@+id/seekBar_candles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="5"
                android:progress="2" />
        </LinearLayout>

        <!-- Column 2: Switch Views -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <Switch
                android:id="@+id/switch_frosting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frosting"
                android:checked="true"
                android:layout_marginBottom="8dp" />

            <Switch
                android:id="@+id/switch_candles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Candles"
                android:checked="true" />
        </LinearLayout>

        <!-- Column 3: Button Views -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal|right"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/button_blow_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blow Out"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/button_goodbye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goodbye" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
